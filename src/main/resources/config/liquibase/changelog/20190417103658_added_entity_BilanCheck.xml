            <column name="bilan_type_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="bilan_check_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="bilan_check_id, bilan_type_id" tableName="bilan_check_bilan_type"/>
        
        <createTable tableName="bilan_check_criteria">
            <column name="criteria_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="bilan_check_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="bilan_check_id, criteria_id" tableName="bilan_check_criteria"/>
        
    </changeSet>
