<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Categorie.
    -->
    <changeSet id="20190417103655-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="categorie_id"
                                 baseTableName="categorie_criteria"
                                 constraintName="fk_categorie_criteria_categorie_id"
                                 referencedColumnNames="id"
                                 referencedTableName="categorie"/>
        <addForeignKeyConstraint baseColumnNames="criteria_id"
                                 baseTableName="categorie_criteria"
                                 constraintName="fk_categorie_criteria_criteria_id"
                                 referencedColumnNames="id"
                                 referencedTableName="criteria"/>
        
        <addForeignKeyConstraint baseColumnNames="subcat_id"
                                 baseTableName="categorie"
                                 constraintName="fk_categorie_subcat_id"
                                 referencedColumnNames="id"
                                 referencedTableName="categorie"/>

    </changeSet>
</databaseChangeLog>
